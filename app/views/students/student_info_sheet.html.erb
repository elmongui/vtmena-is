						<td><%= @student.us_residency.date_started %></td>
						<th align="right">Date Ended:</th>
						<td><%= @student.us_residency.date_ended %></td>
					</tr>
					<tr>
						<th align="right">US Phones:</th>
						<td>
							<% @sep = "" %>
							<% for phone in @student.us_residency.phones %>
								<%=h @sep %><%=h phone.number %>
								<% @sep = ", " %>
							<% end %>
						</td>
						<td colspan="2" />
					</tr>
					<tr>
						<th align="right">US Mailing Address:</th>
						<td colspan="3"><%= @student.us_residency.address_1 %></td>
					</tr>
					<% if @student.us_residency.address_2 %>
						<tr>
							<th align="right">&nbsp;</th>
							<td colspan="3"><%= @student.us_residency.address_2 %></td>
						</tr>
					<% end %>
					<tr>
						<th align="right">US City, State:</th>
						<td><%= @student.us_residency.city %>, <%= @student.us_residency.state %></td>
						<th align="right">Zip Code:</th>
						<td><%= @student.us_residency.zipcode %></td>
