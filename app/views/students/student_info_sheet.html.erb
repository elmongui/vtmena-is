<div class='vtmena-form' align="right">
	<%= link_to "Logout", :action=>"logout" %>
</div>


<div class="vtmena-form">
	<% form_tag do %>
		<fieldset>
			<legend>Personal Information</legend>
			<table>
				<tr>
					<th align="right">Last Name:</th>
					<td><%= @student.last_name %></td>
					<td style="width:100px"/>
					<td colspan="2" />
				</tr>
				<tr>
					<th align="right">First Name:</th>
					<td><%= @student.first_name %></td>
					<td colspan="3" />
				</tr>
				<tr>
					<th align="right">Middle Names:</th>
					<td><%= @student.middle_names %></td>
					<td colspan="3" />
				</tr>
				<tr>
					<th align="right">Email:</th>
					<td><%= @student.email %></td>
					<td colspan="3" />
				</tr>
				<tr>
					<th align="right">Phones:</th>
					<td>
						<% @sep = "" %>
						<% for phone in @student.phones %>
							<%=h @sep %><%=h phone.number %>
							<% @sep = ", " %>
						<% end %>
					</td>
					<td colspan="3" />
				</tr>
				<tr>
					<th align="right">Mailing Address:</th>
					<td><%= @student.address_1 %></td>
					<td colspan="3" />
				</tr>
				<% if @student.address_2 %>
					<tr>
						<th align="right">&nbsp;</th>
						<td><%= @student.address_2 %></td>
						<td colspan="3" />
					</tr>
				<% end %>
				<tr>
					<th align="right">City, Governorate:</th>
					<td><%= @student.city %>, <%= @student.governorate %></td>
					<td />
					<th align="right">Postal Code:</th>
					<td><%= @student.postal_code %></td>
				</tr>
			</table>
		</fieldset>
	<% end %>
</div>
<p />


<div class="vtmena-form">
