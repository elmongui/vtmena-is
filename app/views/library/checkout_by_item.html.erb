<div class='vtmena-form' align="right">
	<%= link_to "Logout", :action=>"logout" %>
</div>

<div class="vtmena-form">
	<% form_tag do %>
		<fieldset>
			<legend><%= @library_item.type.to_s %></legend>
			<table>
				<tr>
					<th align="right">Title:</th>
					<td><%= @library_item.name %></td>
				</tr>
				<% if @library_item.type.to_s=="Book" %>
					<tr>
						<th align="right">Authors:</th>
						<td><%= @library_item.authors %></td>
					</tr>
					<tr>
						<th align="right">Edition:</th>
						<td><%= @library_item.edition %></td>
					</tr>
				<% end %>
				<tr>
					<th align="right">Year:</th>
					<td><%= @library_item.year %></td>
				</tr>
				<tr>
					<th align="right">Publisher:</th>
					<td><%= @library_item.publisher %></td>
				</tr>
				<tr>
					<th align="right">Total Count:</th>
					<td><%= @library_item.count %></td>
				</tr>
				<tr>
					<th align="right">Available:</th>
					<td><%= @library_item.count - @library_item.library_checkouts.length %></td>
				</tr>
			</table>
		</fieldset>
	<% end %>
</div>
<p />


<div class="vtmena-form">
	<% form_tag do %>
		<fieldset>
			<legend>Checkouts</legend>
			<% if @library_item.library_checkouts and @library_item.library_checkouts.length>0 %>
				<table border="1">
						<tr>
							<th>Checkout Date</th>
							<th>Name</th>
							<th>Position</th>
						</tr>
					<% for checkout in @library_item.library_checkouts %>
						<tr>
							<td><%= checkout.checkout %></td>
							<td><%= checkout.person.name %></td>
							<td><%= checkout.person.type.to_s %></td>
						</tr>
					<% end %>
				</table>
			<% end %>
		</fieldset>
	<% end %>
</div>
<p />


<%= link_to 'Back', {:controller=>'library', :action=>'content'} %>
